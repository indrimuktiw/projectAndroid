<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/b">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/tvNamaPerusahaan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:hint="Nama Perusahaan"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/imgPerusahaan"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/tvNamaPerusahaan"
            android:layout_marginTop="10dp"
            android:src="@drawable/default_user" />

        <TextView
            android:id="@+id/tvIdPerusahaan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imgPerusahaan"
            android:layout_below="@id/tvIdPerusahaan"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/imgPerusahaan"
            android:hint="Id Perusahaan"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tvAlamatPerusahaan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvIdPerusahaan"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/imgPerusahaan"
            android:hint="Alamat Perusahaan :"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvAlamatContentPrshn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAlamatPerusahaan"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/imgPerusahaan"
            android:hint="Contoh "
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tvNoTelpPerusahaan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAlamatContentPrshn"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/imgPerusahaan"
            android:hint="Telp :"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvTelpContentPrshn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNoTelpPerusahaan"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/imgPerusahaan"
            android:hint="Contoh 0861577909"
            android:textSize="20sp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"/>
</LinearLayout>
